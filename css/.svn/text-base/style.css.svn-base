body{
	font-family: Helvetica, Arial;
	margin: 0px 0px 0px 0px;
	font-size: 16px;
/*	background-color: #FFFFFF; //weiß, Winter*/
/*	background-color: #95B768; //grün, Frühling*/
/*	background-color: #FFCA55; //orange, Sommer*/
/*	background-color: #B7864A; //braun, Herbst*/
}

img{
	border: 0;
	-webkit-box-reflect:below 2px -webkit-gradient(linear, left top, left bottom, from(transparent), color-stop(0.8, transparent), to(white));
	margin: 0px 0px 20px 0px;
}

input, textarea{
	background-color: #EEEEEE;
	border: 1px solid #CCCCCC;
	font-size: 16px;
}

td.label{
	vertical-align: top;
	padding: 5px 0px 0px 0px;
}

td.submit{
	text-align: right;
}

div#header{
	background-image: url("../gfx/header.png");
	width: 100%;
	height: 55px;
	margin: 0px 0px 25px 0px;
}

div#navigation{
	margin: 0px auto 0px auto;
	width: 710px;
}

div#navigation h1{
	font-weight: normal;
	font-size: 32px;
	margin: 0px 0px 0px 0px;
	padding: 5px 0px 0px 0px;
	text-shadow: #000000 1px 1px 5px;
}

div#content{
	width: 710px;
	margin: 0px auto 0px auto;
}

div.node{
	margin: 0px 0px 20px 0px;
}

div.node_top{
	background-image: url("../gfx/node_top.png");
	background-repeat: no-repeat;
	height: 57px;
	width: 710px;
	padding: 0px 0px 0px 0px;
	margin: 0px 0px 10px 0px;
	position: relative;
	z-index: 99;
	cursor: pointer;
}

div.node_top h1{
	font-weight: normal;
	text-shadow: #000000 2px 2px 10px;
	padding: 8px 0px 0px 20px;
	margin: 0px 0px 0px 0px;
	font-size: 28px;
}

div.node_bottom{
	background-image: url("../gfx/node_bottom.png");
	background-repeat: no-repeat;
	height: 60px;
	width: 710px;
	margin: -19px 0px 0px 0px;
	position: relative;
	z-index: 99;
	cursor: pointer;
}

div.node_content{
	background-color: #FEFEFE;
	border-left: 1px solid #CCCCCC;
	border-right: 1px solid #CCCCCC;
	margin: -17px 0px 0px 5px;
	width: 648px;
	position: relative;
	z-index: 1;
	padding: 0px 20px 20px 20px;
	overflow: hidden;
}

div.node_content h2{
	margin: 0px 0px 6px 0px;
	padding: 0px 0px 0px 0px;
	font-size: 18px;
}

div.node_content span.date{
	margin: 0px 0px 0px 0px;
	padding: 0px 0px 0px 0px;
	font-size: 12px;
}

div.tweets{
	float: left;
	width: 200px;
	padding: 5px 5px 5px 5px;
}
div.pics{
	float: left;
	width: 314px;
	padding: 5px 5px 5px 5px;
}

div#kontaktform{
	width: 640px;
	margin: 0px auto 0px auto;
}

div#kontaktform table{
	width: 640px;
}

div#kontakt_content p{
	border: 2px solid #FF0000;
	background-color: #EEEEEE;
	width: 616px;
	padding: 10px 10px 10px 10px;
}

div#kontakt_content p.success{
	border: 2px solid #00FF00;
	background-color: #EEEEEE;
	width: 616px;
	padding: 10px 10px 10px 10px;
}

div.node_link{
	background-color: #EEEEEE;
	margin: 0px -20px 20px -20px;
	padding: 10px 10px 10px 10px;
	text-align: right;
	border-bottom: 1px solid #CCCCCC;
}

div.node_link a{
	color: #000032;
}

div#color_picker{
	width: 100px;
	height: 20px;
	background-color: #CCCCCC;
}